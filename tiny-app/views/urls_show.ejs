<!-- views/urls_show.ejs -->
<!-- shows the short url and long url of a given short url -->

<!DOCTYPE html>
<html lang="en">
<head>
  <title>TinyApp</title>
</head>

<body>

<header>
  <% include ./partials/_header %>
</header>

<main>
  <ul>
      <li><%= shortURL %> - <a href=<%= urls[shortURL] %>><%= urls[shortURL] %></a>
        <form method="POST" action="/urls/<%= shortURL%>">
          <input id="longURL" type="text" name="longURL" value="<%= urls[shortURL] %>" placeholder="http://" style="width: 300px">
          <input type="submit" value="Update URL">
        </form>
      </li>
  </ul>
</main>

</body>
</html>