<!-- views/urls_index.ejs -->
<!-- shows a list of all of the short urls and their
  corresponding long urls, and includes a link to make
  a short url -->

<!DOCTYPE html>
<html lang="en">
<head>
  <title>TinyApp</title>
</head>

<body>

<header>
  <% include ./partials/_header %>
</header>

<main>
  <a href='/urls/new'>Link for Shortening URL</a>
  <ul>
    <% for (shortURL in urls) { %>
      <li><%= shortURL %> --- <a href=<%= urls[shortURL] %> ><%= urls[shortURL] %></a>
        <a href=/urls/<%= shortURL %>>Edit</a>

        <form method="POST" action="/urls/<%= shortURL%>/delete">
          <input type="submit" value="Delete URL">
        </form>
      </li>
      <br>
    <% }; %>
  </ul>
</main>

</body>
</html>