<!DOCTYPE html>


<h1>TinyApp</h1>

  <% if (user.id) { %>
    <form method="POST" action="/logout">
      <input type="submit" value="log out">
    </form>
    <p id="userShow">Welcome <%= user.email %>!</p>
  <% } else { %>
    <form method="GET" action="/login" style="display: inline-block">
      <input type="submit" value="Sign In">
    </form>
    <form method="GET" action="/register" style="display: inline-block">
      <input type="submit" value="Register">
    </form>
  <% } %>

  <!-- if logged in: show welcome: email,
      else if not logged in, show login/register options, link to both -->
