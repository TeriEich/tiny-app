<!-- views/partials/_header.ejs -->
<!-- creates a header partial -->

<h1>TinyApp</h1>
<% if (username) { %>
  <form method="POST" action="/logout">
    <input type="submit" value="log out">
  </form>
  <p id="usernameDisplayed">username: <%= username %></p>
<% } else{ %>
  <form method="POST" action="/login">
    <input type="text" id="username" name="username" placeholder="username" style="width: 150px">
    <input type="submit" value="sign in">
  </form>
<% } %>
